{
  "name": "@repo/api",
  "description": "Streaming Service Sync API",
  "version": "1.0.0",
  "main": "openapi.json",
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf dist && rm -rf node_modules",
    "clean:deploy": "rm -rf node_modules && rm -rf coverage && rm -rf test",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "lint": "oxlint . --max-warnings 0",
    "format": "prettier --write .",
    "generate": "nest start -c nest-gen-config.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.4",
    "@nestjs/core": "^11.0.4",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.5",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/terminus": "^10.3.0",
    "@nestjs/testing": "^11.0.7",
    "@repo/core": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/nest-db": "workspace:*",
    "@scalar/nestjs-api-reference": "^0.3.177",
    "@sentry/cli": "^2.41.1",
    "@sentry/nestjs": "^8.54.0",
    "@sentry/profiling-node": "^8.54.0",
    "axios": "^1.7.9",
    "nestjs-pino": "^4.3.0",
    "nestjs-zod": "^4.3.1",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@repo/lint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.9",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "oxlint": "^0.16.8",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "tsx": "4.19.1",
    "typescript": "5.5.4",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.1.1",
    "zocker": "^1.4.1"
  },
  "overrides": {
    "@nestjs/terminus": {
      "@nestjs/common": "$@nestjs/common",
      "@nestjs/core": "$@nestjs/core",
      "@nestjs/axios": "$@nestjs/axios"
    },
    "@sentry/nestjs": {
      "@nestjs/common": "$@nestjs/common",
      "@nestjs/core": "$@nestjs/core"
    },
    "nestjs-zod": {
      "@nestjs/common": "$@nestjs/common",
      "@nestjs/core": "$@nestjs/core",
      "@nestjs/swagger": "$@nestjs/swagger"
    }
  }
}
