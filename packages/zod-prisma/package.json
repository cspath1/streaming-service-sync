{
  "name": "@repo/zod-prisma",
  "version": "0.0.0",
  "description": "A Prisma generator that creates Zod schemas and client extensions for your Prisma models.",
  "bin": {
    "zod-prisma": "bin/cli.js"
  },
  "main": "bin/cli.js",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "clean:deploy": "rm -rf node_modules && rm -rf coverage && rm -rf test",
    "generate": "tsup",
    "format": "prettier --write .",
    "lint": "oxlint . --max-warnings 0",
    "postinstall": "tsup"
  },
  "dependencies": {
    "@prisma/generator-helper": "^6.3.0",
    "@repo/lint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.12.0",
    "oxlint": "^0.16.8",
    "parenthesis": "^3.1.8",
    "prettier": "^3.2.5",
    "ts-morph": "^25.0.0",
    "tsup": "^8.3.6",
    "typescript": "5.5.4",
    "zod": "^3.24.1"
  }
}
