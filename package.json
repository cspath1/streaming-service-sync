{
  "name": "streaming-service-sync",
  "private": true,
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:deploy": "turbo run clean:deploy && rm -rf node_modules",
    "dev": "dotenv -e .env.local -- turbo run dev",
    "db:push": "dotenv -- turbo run db:push",
    "db:seed": "dotenv -- turbo run db:seed",
    "format": "turbo run format",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "prepare": "husky",
    "postprepare": "docker compose up -d; turbo run generate --output-logs=none; dotenv -- turbo run db:push --output-logs=none; dotenv -- turbo run db:seed --output-logs=none;",
    "publish:package": "turbo run publish:package",
    "publish:package:dry-run": "turbo run publish:package:dry-run",
    "sentry:sourcemaps": "turbo run sentry:sourcemaps",
    "start": "turbo run start",
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "test:cov": "vitest run --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^8.0.0",
    "husky": "^9.1.7",
    "oxlint": "^0.16.8",
    "prettier": "^3.2.5",
    "prisma": "6.3.0",
    "tsx": "4.19.1",
    "turbo": "^2.5.2",
    "vite": "^6.2.6",
    "vitest": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1"
  },
  "engines": {
    "node": "22",
    "pnpm": "10.11.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@openapitools/openapi-generator-cli",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@sentry/cli",
      "@sentry/profiling-node",
      "@swc/core",
      "esbuild",
      "nestjs-pino",
      "prisma"
    ]
  }
}
